.l-top.js-top.anim-menu
    .c-container.c-container--large
        .l-top__primary
            h1.l-top__logo
                span.text--hide Markething
                a(href="/")
                    img(src="/img/png/logo.png" srcset="/img/png/logo@2x.png 2x", alt="Markething")
            .l-top__nav
                ul.c-nav.c-nav--desktop
                    include ./navigation.pug

            .l-top__search-field
                form(action="/" method="get").c-search-form.c-search-form--desktop
                    input(type="text" placeholder="Co chcete hledat?").c-input.c-input--search-desktop
                    button(type="submit").c-search-form__submit
                        <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 16.98 16.98">
                            <circle cx="7.32" cy="7.32" r="6.57" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                            <line x1="11.96" y1="11.96" x2="16.45" y2="16.45" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                        </svg>

            .l-top__primary-inner
                .l-top__menu
                    .c-menu
                        .c-menu__content.js-mobile-trigger-open
                            .c-menu__inner
                                p.c-menu__text menu
                                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="12" viewBox="0 0 13 9.5">
                                    <line y1="0.75" x2="13" y2="0.75" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                    <line y1="4.75" x2="13" y2="4.75" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                    <line y1="8.75" x2="9" y2="8.75" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                </svg>

                        .c-menu__content.c-menu__content--close.js-mobile-trigger-close
                            .c-menu__inner
                                p.c-menu__text zavřít
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 10.25 10.25">
                                    <line x1="0.53" y1="9.72" x2="9.72" y2="0.53" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                    <line x1="0.53" y1="0.53" x2="9.72" y2="9.72" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                </svg>

                .l-top__search
                    .c-search
                        .c-search__open.js-search-trigger-open
                            <svg class="icon-open" xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 16.98 16.98">
                                <circle cx="7.32" cy="7.32" r="6.57" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                                <line x1="11.96" y1="11.96" x2="16.45" y2="16.45" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                            </svg>
                        .c-search__close.js-search-trigger-close
                            <svg class="icon-close" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 10.25 10.25">
                                <line x1="0.53" y1="9.72" x2="9.72" y2="0.53" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                                <line x1="0.53" y1="0.53" x2="9.72" y2="9.72" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 1.5px"/>
                            </svg>

        .l-top__social
            include ./social.pug

    .l-top__mobile.js-mobile-slider
        .l-top__mobile-menu
            ul.c-nav.c-nav--mobile
                include ./navigation.pug

            .l-top__social-mobile
                include ./social.pug

        .l-top__mobile-search
            form(action="/" method="get").c-search-form.c-search-form--mobile
                div
                    input(type="text" placeholder="Co chcete hledat?").c-input.c-input--search-mobile
                    span <!-- keep it -->
                button(type="submit").c-search-form__submit
                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 16.98 16.98">
                        <circle cx="7.32" cy="7.32" r="6.57" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                        <line x1="11.96" y1="11.96" x2="16.45" y2="16.45" style="fill: none;stroke: currentColor;stroke-miterlimit: 10;stroke-width: 2px"/>
                    </svg>
